<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
        </div>
        <h2 class="mt-3">New book</h2>
        <div class="form-group">
          <%= form_with model: @book do |f| %>
          <label for="book_title">Title</label>
          <%= f.text_field :title ,class: "form-control book_title text book[title] book_title" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body ,class: "form-control book_body book[body] book_body" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book' ,class: "btn btn-success" %>
          <% end %>
        </div>
        </div>
        <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
          <table class="table">
          <tbody>
              <tr>
                <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
                <td><%= @book.title %></td>
                <td><%= @book.body %></td>
                <td><%= link_to "Edit", edit_book_path ,class: "btn btn-sm btn-success" %></td>
                <td><% if @book.user == current_user %>
                    <%= link_to "Destroy", book_path(@book),method: :delete ,class: "btn btn-sm btn-danger" %>
                    <% end %>
                </td>
              </tr>
          </tbody>
          </table>
        </div>
      </div>
    </div>